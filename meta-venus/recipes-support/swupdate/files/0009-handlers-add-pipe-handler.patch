+#include <stdio.h>
+#include <stdlib.h>
+#include <string.h>
+#include <unistd.h>
+#include <errno.h>
+#include <sys/wait.h>
+
+#include "swupdate.h"
+#include "handler.h"
+#include "util.h"
+
+void pipe_handler(void);
+
+static int install_pipe_image(struct img_type *img,
+	void __attribute__ ((__unused__)) *data)
+{
+	char cmd[256];
+	FILE *p;
+	int stat;
+	int ret;
+	int fd;
+
+	if (!strlen(img->type_data)) {
+		ERROR("No command specified");
+		return -1;
+	}
+
+	snprintf(cmd, sizeof(cmd), "%s '%s'", img->type_data, img->device);
+
+	p = popen(cmd, "w");
+	if (!p) {
+		ERROR("Error running command: %s", strerror(errno));
+		return -1;
+	}
+
+	fd = fileno(p);
+	ret = copyimage(&fd, img, NULL);
+	stat = pclose(p);
+
+	if (stat == -1) {
+		ERROR("pclose: %s", strerror(errno));
+		ret = stat;
+	} else {
+		stat = WEXITSTATUS(stat);
+		if (stat) {
+			ERROR("pipe returned %d", stat);
+			ret = stat;
+		}
+	}
+
+	return ret;
+}
+
+__attribute__((constructor))
+void pipe_handler(void)
+{
+	register_handler("pipe", install_pipe_image, NULL);
+}
